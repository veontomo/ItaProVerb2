<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.veontomo.itaproverb.fragments.FragSearch">

    <EditText
        android:id="@+id/frag_search_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/search_field_bgr"
        android:hint="@string/search_hint_example"
        android:inputType="text"/>

    <ImageView
        android:id="@+id/frag_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/spaceSmaller"
        android:layout_marginLeft="@dimen/spaceSmaller"
        android:layout_marginRight="@dimen/spaceSmaller"
        android:layout_marginStart="@dimen/spaceSmaller"
        android:src="@mipmap/search"/>


</LinearLayout>
