<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="com.veontomo.itaproverb.fragments.FragManagerPanel">

    <ImageView
        android:id="@+id/frag_manager_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/textMedium"
        android:layout_marginStart="@dimen/textMedium"
        android:contentDescription="@string/add_to_favorites"
        android:src="@mipmap/star"/>

    <ImageView
        android:id="@+id/frag_manager_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/textMedium"
        android:layout_marginStart="@dimen/textMedium"
        android:contentDescription="@string/descr_edit"
        android:src="@mipmap/pencil"/>

    <ImageView
        android:id="@+id/frag_manager_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/textMedium"
        android:layout_marginStart="@dimen/textMedium"
        android:contentDescription="@string/descr_share"
        android:src="@mipmap/share"/>

    <ImageView
        android:id="@+id/frag_manager_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/textMedium"
        android:layout_marginStart="@dimen/textMedium"
        android:contentDescription="@string/descr_delete"
        android:src="@mipmap/cancel"/>

</LinearLayout>
