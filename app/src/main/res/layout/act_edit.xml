<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spaceMedium"
        android:orientation="vertical"
        tools:context="com.veontomo.itaproverb.activities.ActEdit">

        <EditText
            android:id="@+id/act_edit_proverb_text"
            style="@style/ProverbEditField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/insert_field_bgr"
            android:hint="@string/add_proverb_hint"
            tools:text="Chi cerca trova" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spaceSmall"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/act_edit_label"
                style="@style/labelMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_to_favorites" />

            <CheckBox
                android:id="@+id/act_edit_favorite_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" />

            <ImageView
                android:id="@+id/act_edit_favorite"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:contentDescription="@string/add_to_favorites"
                android:src="@mipmap/star" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spaceMedium"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/act_edit_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spaceLarger"
                android:drawableTop="@mipmap/cancel"
                android:text="@string/cancel" />

            <TextView
                android:id="@+id/act_edit_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spaceLarger"
                android:drawableTop="@mipmap/ok"
                android:text="@string/confirm" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>