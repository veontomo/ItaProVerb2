<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.veontomo.itaproverb.activities.ActEdit">

    <EditText
        android:id="@+id/act_edit_proverb_text"
        style="@style/ProverbEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_background"
        tools:text="Chi cerca trova"/>

    <ImageButton
        android:id="@+id/act_edit_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/act_edit_proverb_text"
        android:src="@mipmap/star"/>

    <TextView
        android:id="@+id/act_edit_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/act_edit_favorite"
        android:layout_margin="@dimen/spaceMedium"
        android:drawableTop="@mipmap/cancel"
        android:text="@string/cancel"/>

    <TextView
        android:id="@+id/act_edit_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/act_edit_cancel"
        android:layout_margin="@dimen/spaceMedium"
        android:layout_toEndOf="@id/act_edit_cancel"
        android:layout_toRightOf="@id/act_edit_cancel"
        android:drawableTop="@mipmap/ok"
        android:text="@string/add_proverb"/>


</RelativeLayout>
