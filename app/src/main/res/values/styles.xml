<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ProverbDay" parent="AppTheme">
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textColor">@color/secondary1_light</item>
        <item name="android:textStyle">italic</item>

    </style>

    <style name="ProverbDate" parent="ProverbDay">
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:alpha">@dimen/opaque_high</item>
    </style>

    <style name="ProverbRow" parent="AppTheme">
        <item name="android:padding">@dimen/spaceSmaller</item>
        <item name="android:textSize">@dimen/textSmaller</item>
        <item name="android:textColor">@color/secondary1_light</item>

    </style>

    <style name="ProverbsList">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

</resources>
