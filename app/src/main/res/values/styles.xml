<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ProverbSingle" parent="AppTheme">
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:textColor">@color/secondary1_light</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingTop">@dimen/spaceSmall</item>
        <item name="android:paddingBottom">@dimen/spaceMedium</item>
        <item name="android:paddingLeft">@dimen/spaceSmall</item>
        <item name="android:paddingRight">@dimen/spaceSmall</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ProverbDate" parent="AppTheme">
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:alpha">@dimen/opaque_high</item>
        <item name="android:padding">@dimen/spaceSmaller</item>
        <item name="android:textColor">@color/secondary1_light</item>
    </style>

    <style name="ProverbRow" parent="AppTheme">
        <item name="android:padding">@dimen/spaceSmaller</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textColor">@color/secondary1_light</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">start</item>


    </style>

    <style name="ProverbsList">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="ProverbEditField" parent="AppTheme">
        <item name="android:layout_marginTop">@dimen/spaceMedium</item>
        <item name="android:layout_marginLeft">@dimen/spaceSmall</item>
        <item name="android:layout_marginRight">@dimen/spaceSmall</item>
        <item name="android:layout_marginBottom">@dimen/spaceLarge</item>
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="warningMessage">
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textColor">@color/warning</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="labelMessage">
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textColor">@color/secondary1</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="tile_big" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:textColor">@color/secondary1_light</item>
        <item name="android:background">@drawable/insert_field_bgr</item>
        <item name="android:layout_margin">@dimen/spaceMedium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>



</resources>
